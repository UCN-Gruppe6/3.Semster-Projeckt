@model IEnumerable<MVC_Client.PcPart.Costumer>

@{
    ViewBag.Title = "Index";
}

<h2>Kunder</h2>

<div class="row">

<div class="col-md-4">
    <br />
    <h4>Find Kunde via navn</h4>

    @using (Html.BeginForm("Index", "Customer", FormMethod.Get))
    {
        <p> <b>Navn:</b> @Html.TextBox("name") <br />
        <br> 
        <input type="submit" value="Find" /> </p>
        <br />
    }
</div>

    <div class="col-md-4">
        <br />
        <h4>Find Kunde via id</h4>

        @using (Html.BeginForm("Index", "Customer", FormMethod.Get))
        {
            <p>
                <b>ID:</b> @Html.TextBox("id") <br />
                <br>
                <input type="submit" value="Find" />
            </p>
            <br />
        }
    </div>

</div>

<div>
    @Html.ActionLink("Opret ny kunde", "Create", null, new { @class = "btn btn-default"})
</div>

<table class="table">
    <tr>
        <th>
            @Html.LabelForModel("Navn")
        </th>
        <th>
            @Html.LabelForModel("Fødselsdag")
        </th>
        <th>
            @Html.LabelForModel("Addresse")
        </th>
        <th>
            @Html.LabelForModel("Postnummer")
        </th>
        <th>
            @Html.LabelForModel("By")
        </th>
        <th>
            @Html.LabelForModel("Telefon Nummer")
        </th>
        <th>
            @Html.LabelForModel("Email")
        </th>
        <th>
            @Html.LabelForModel("Firma")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @item.Birthday.Value.ToShortDateString()
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Address)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ZIPCode)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.City)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PhoneNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Company)
        </td>
        <td>
            @Html.ActionLink("Redigere", "Edit", new { id=item.CostumerId }) |
            @Html.ActionLink("Detaljer", "Details", new { id=item.CostumerId }) |
            @Html.ActionLink("Slet", "Delete", new { id=item.CostumerId })
        </td>
    </tr>
}

</table>
